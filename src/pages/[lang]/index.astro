---
import { Icon } from "astro-icon/components";

import Contact from "~/components/widgets/Contact.astro";
import Hero from "~/components/widgets/Hero.astro";
import ZoneList from "~/components/widgets/ZoneList.astro";
import { localeParams, useTranslations, type Lang } from "~/i18n";
import Layout from "~/layouts/PageLayout.astro";

const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale);

export const getStaticPaths = () => localeParams;
---

<Layout title="Xperience House">
  <Hero>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-r from-sky-300 to-indigo-300 dark:from-sky-700 dark:to-indigo-800" />
    </Fragment>
    <Fragment slot="title">
      Xperience House
    </Fragment>
    <Fragment slot="subtitle">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      In sed massa in nunc hendrerit ultrices.
      Mauris a lorem quis felis vulputate iaculis.
      Mauris pulvinar elit mi, a aliquet tellus maximus vitae.
    </Fragment>
    <Fragment slot="actions">
      <a class="btn-primary" href="#contact">
        {
          t({
            en: "Get In Touch",
            pt: "Contacte-nos",
          })
        }
      </a>
    </Fragment>
  </Hero>

  <div class="pt-16 pointer-events-none"></div>

  <div class="flex justify-center items-end bg-yellow-200 dark:bg-yellow-700 dark:font-bold w-fit mx-auto p-3 rounded-full gap-2">
    <Icon name="tabler:alert-triangle" class="w-6 h-6" />
    <span>{t({ en: "Website under construction", pt: "Website em construção" })}</span>
  </div>

  <ZoneList />

  <div class="pt-16 pointer-events-none"></div>

  <Contact />

</Layout>
